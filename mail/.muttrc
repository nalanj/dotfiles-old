set mbox_type   = Maildir
set sendmail    = /usr/bin/msmtp
set sendmail_wait = 0

set folder      = ~/.mail/fastmail
set spoolfile   = "+INBOX"
set mbox        = "+Archive"
set postponed   = "+Drafts"
set record = "+Sent"

mailboxes +INBOX

macro index,pager S \
    "<save-message>+Spam<enter>" \
    "mark message as spam"

macro index,pager y \
    "<save-message>=Archive<enter><enter>" \
    "Archive"

macro index,pager \cb |urlview\n

# main options
set realname   = "Alan Johnson"
set from       = "nalanj@fastmail.com"
set mail_check = 0
set envelope_from

set delete           # don't ask, just do
unset confirmappend  # don't ask, just do!
set quit             # don't ask, just do!!
unset mark_old       # read/new is good enough for me

# sort/threading
set sort     = threads
set sort_aux = reverse-last-date-received
set sort_re

# look and feel
set pager_index_lines = 8
set pager_context     = 5
set pager_stop
set menu_scroll
set smart_wrap
set tilde
unset markers

# composing
set fcc_attach
unset mime_forward
set forward_format = "Fwd: %s"
set include
set forward_quote

ignore *                               # first, ignore all headers
unignore from: to: cc: date: subject:  # then, show only these
hdr_order from: to: cc: date: subject: # and in this order

# format
# view html automaticallys
auto_view text/html

# save html for last
alternative_order text/enriched text/html text/plain

